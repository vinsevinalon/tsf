{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {% if section.settings.title != blank %}
          <h2
            class="testimonial-section__heading rich-text__heading rte {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
            {% if settings.animations_reveal_on_scroll %}
              data-cascade
              style="--animation-order: 1;"
            {% endif %}
          >
            {% if section.settings.title_bold %}<strong>{% endif %}
            {{ section.settings.title | escape }}
            {% if section.settings.title_bold %}</strong>{% endif %}
          </h2>
        {% endif %}

        <div
          class="testimonial-slider"
          data-slider-mobile-count="1"
          data-slider-desktop-count="3"
        >
          {% for block in section.blocks %}
            <div
              class="testimonial-slide{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
              {{ block.shopify_attributes }}
              {% if settings.animations_reveal_on_scroll %}
                data-cascade
                style="--animation-order: {{ forloop.index | plus: 1 }};"
              {% endif %}
            >
              <div class="testimonial-content">
                <div class="rich-text__text rte">{{ block.settings.testimonial }}</div>
                <div class="testimonial-author">
                  {% if block.settings.author_image != blank %}
                    <img
                      src="{{ block.settings.author_image | img_url: '100x100', crop: 'center' }}"
                      alt="{{ block.settings.author_name }}"
                    >
                  {% endif %}
                  <div class="author-details">
                    <div class="author-name">{{ block.settings.author_name }}</div>
                    <div class="author-title">{{ block.settings.author_title }}</div>
                  </div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="slider-pagination"></div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const slider = document.querySelector('.testimonial-slider');
    const slides = slider.querySelectorAll('.testimonial-slide');
    const pagination = document.querySelector('.slider-pagination');

    let currentSlide = 0;
    const mobileSlideCount = parseInt(slider.dataset.sliderMobileCount);
    const desktopSlideCount = parseInt(slider.dataset.sliderDesktopCount);

    function updateSlider() {
      const isMobile = window.innerWidth < 750;
      const slideCount = isMobile ? mobileSlideCount : desktopSlideCount;

      slides.forEach((slide, index) => {
        if (index >= currentSlide && index < currentSlide + slideCount) {
          slide.style.display = 'block';
        } else {
          slide.style.display = 'none';
        }
      });

      updatePagination();
    }

    function updatePagination() {
      const isMobile = window.innerWidth < 750;
      const slideCount = isMobile ? mobileSlideCount : desktopSlideCount;
      const pageCount = Math.ceil(slides.length / slideCount);

      pagination.innerHTML = '';
      for (let i = 0; i < pageCount; i++) {
        const dot = document.createElement('span');
        dot.classList.add('pagination-dot');
        if (i === Math.floor(currentSlide / slideCount)) {
          dot.classList.add('active');
        }
        dot.addEventListener('click', () => {
          currentSlide = i * slideCount;
          updateSlider();
        });
        pagination.appendChild(dot);
      }
    }

    function nextSlide() {
      const isMobile = window.innerWidth < 750;
      const slideCount = isMobile ? mobileSlideCount : desktopSlideCount;
      currentSlide = (currentSlide + slideCount) % slides.length;
      updateSlider();
    }

    updateSlider();

    // Auto-slide on mobile
    if (window.innerWidth < 750) {
      setInterval(nextSlide, 5000); // Change slide every 5 seconds
    }

    window.addEventListener('resize', updateSlider);
  });
</script>

